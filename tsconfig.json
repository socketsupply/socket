{
  "include": ["api/*.js", "api/**/*.js", "api/**/**/*.js"],
  "compilerOptions": {
    "baseUrl": "socket:",
    "target": "ES2022",
    "types": [],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "strictNullChecks": false,
    "declarationMap": false,
    "alwaysStrict": true,
    "declaration": true,
    "sourceMap": false,
    "checkJs": false,
    "allowJs": true,
    "paths": {
      "npm:*": ["node_modules/*"],
      "socket:*": ["api/*"]
    }
  }
}
